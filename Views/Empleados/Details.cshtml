@model Proyecto.ViewModels.EmpleadosVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Empleados</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Edad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Edad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sueldo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sueldo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ambiguedad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ambiguedad)
        </dd>
        @{
        string activo = Model.Activo ? "Si" : "No";
        <dd class="col-sm-10">
        Activo: @activo
        </dd>
        }
        <dd class = "col-sm-10">
            Fecha Alta:@Html.DisplayFor(model => model.FechaAlta)
        </dd> 
        @{
            if(!Model.Activo){
                 <dd class = "col-sm-10">
                 Fecha Baja:@Html.DisplayFor(model => model.FechaBaja)
                 </dd>
            }
        }
       
    </dl>
</div>
<div>
    <a asp-action="Unsubscribe" asp-route-id="@Model?.Id">Unsubscribe</a> |
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
